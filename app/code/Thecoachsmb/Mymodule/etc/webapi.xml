<?xml version="1.0" ?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
   <route method="GET" url="/V1/intuji/posts">
       <service class="Thecoachsmb\Mymodule\Api\RestapiInterface" method="getPosts"/>
       <resources>
           <resource ref="anonymous"/>
       </resources>
   </route>
   <route method="POST" url="/V1/intuji/posts">
       <service class="Thecoachsmb\Mymodule\Api\RestapiInterface" method="addPosts"/>
       <resources>
           <resource ref="anonymous"/>
       </resources>
   </route>
   <route method="DELETE" url="/V1/intuji/posts">
       <service class="Thecoachsmb\Mymodule\Api\RestapiInterface" method="deletePost"/>
       <resources>
           <resource ref="anonymous"/>
       </resources>
   </route>
   <route method="PUT" url="/V1/intuji/posts">
       <service class="Thecoachsmb\Mymodule\Api\RestapiInterface" method="updatePost"/>
       <resources>
           <resource ref="anonymous"/>
       </resources>
   </route>
</routes>